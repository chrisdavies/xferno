{
  "name": "xferno",
  "version": "0.0.1",
  "description": "React hook-like capabilities for inferno.",
  "author": "Christopher Davies <github@christophilus.com>",
  "repository": {
    "url": "https://github.com/chrisdavies/xferno"
  },
  "license": "MIT",
  "main": "dist/xferno.js",
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public --dev --host 0.0.0.0 --port 3000",
    "test": "jest"
  },
  "files": [
    "dist/xferno.js",
    "dist/xferno.js.map"
  ],
  "peerDependencies": {
    "inferno": "7.x"
  },
  "devDependencies": {
    "@babel/core": "7.10.2",
    "@babel/plugin-transform-runtime": "7.10.1",
    "@babel/preset-env": "7.10.2",
    "@rollup/plugin-babel": "5.0.3",
    "@rollup/plugin-commonjs": "13.0.0",
    "@rollup/plugin-node-resolve": "8.0.1",
    "@rollup/plugin-replace": "2.3.3",
    "@types/jest": "26.0.0",
    "babel-jest": "26.0.1",
    "babel-plugin-inferno": "6.1.1",
    "eslint": "7.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-jsx": "0.1.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.0",
    "inferno-test-utils": "7.4.2",
    "jest": "26.0.1",
    "prettier": "2.0.5",
    "rollup": "2.17.0",
    "rollup-plugin-analyzer": "3.2.3",
    "rollup-plugin-livereload": "1.3.0",
    "rollup-plugin-terser": "6.1.0",
    "sirv-cli": "1.0.1"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "plugins": [
      "jsx",
      "prettier"
    ],
    "extends": [
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-unused-vars": "error",
      "jsx/uses-factory": [
        1,
        {
          "pragma": "JSX"
        }
      ],
      "jsx/factory-in-scope": [
        0,
        {
          "pragma": "h"
        }
      ],
      "jsx/mark-used-vars": 1,
      "jsx/no-undef": 1
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    }
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 100
  }
}
